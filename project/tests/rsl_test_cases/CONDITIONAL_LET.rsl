scheme CONDITIONAL_LET =
    class
      value
        checkAndCompute : Int -> Int
        checkAndCompute(x) is
          if x > 0 then
            let
              y = x * 2
            in
              y + 10
            end
          else
            let
              y = x / 2
            in
              y - 10
            end
          end
    end
  