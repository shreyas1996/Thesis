scheme SIMPLE_MATH =
    class
      type
        Number == n1 | n2,
        B = E,
        E = D,
        D = A,
        A = Int,
        C
      value
        a1: Int = 1,
        add : Number >< Number -> Int
        add(x, y) is x + y
      type
        MyInt = Int
      axiom
        [basicAddition] all x : Int :- all y : Int :- add(x, y) = x + y
    end
  